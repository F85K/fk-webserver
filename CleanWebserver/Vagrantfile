# FK Webstack - Vagrant Configuration
# Creates 3-node kubeadm Kubernetes cluster
#
# VMs Created:
#   - fk-control: 192.168.56.10 (control plane)
#   - fk-worker1: 192.168.56.11 (worker)
#   - fk-worker2: 192.168.56.12 (worker)
#
# Usage:
#   vagrant up              # Create and provision all VMs
#   vagrant status          # Check VM status
#   vagrant ssh fk-control  # SSH into control plane
#   vagrant destroy         # Delete all VMs

Vagrant.configure("2") do |config|
  # Base box (Ubuntu 22.04 LTS)
  config.vm.box = "ubuntu/jammy64"
  
  # Default provisioning script runs on all VMs (install Docker, kubeadm, kubectl)
  config.vm.provision "shell", path: "vagrant/scripts/k8s-setup.sh"

  # =================================================
  # Control Plane Node
  # =================================================
  config.vm.define "fk-control" do |control|
    control.vm.hostname = "fk-control"
    control.vm.network "private_network", ip: "192.168.56.10"
    
    control.vm.provider "virtualbox" do |vb|
      vb.name = "fk-control"
      vb.cpus = 2
      vb.memory = 2048  # 2GB RAM minimum for control plane
      vb.customize ["modifyvm", :id, "--cableconnected1", "on"]
    end
    
    # Provision control plane initialization
    control.vm.provision "shell", path: "vagrant/scripts/control-init.sh"
  end

  # =================================================
  # Worker Node 1
  # =================================================
  config.vm.define "fk-worker1" do |worker1|
    worker1.vm.hostname = "fk-worker1"
    worker1.vm.network "private_network", ip: "192.168.56.11"
    
    worker1.vm.provider "virtualbox" do |vb|
      vb.name = "fk-worker1"
      vb.cpus = 2
      vb.memory = 2048
      vb.customize ["modifyvm", :id, "--cableconnected1", "on"]
    end
    
    # Provision worker node joining
    worker1.vm.provision "shell", path: "vagrant/scripts/worker-join-new.sh"
  end

  # =================================================
  # Worker Node 2
  # =================================================
  config.vm.define "fk-worker2" do |worker2|
    worker2.vm.hostname = "fk-worker2"
    worker2.vm.network "private_network", ip: "192.168.56.12"
    
    worker2.vm.provider "virtualbox" do |vb|
      vb.name = "fk-worker2"
      vb.cpus = 2
      vb.memory = 2048
      vb.customize ["modifyvm", :id, "--cableconnected1", "on"]
    end
    
    # Provision worker node joining
    worker2.vm.provision "shell", path: "vagrant/scripts/worker-join-new.sh"
  end
end
