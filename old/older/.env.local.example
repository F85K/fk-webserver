# FK Webstack - Local Environment Variables
# Copy this file to .env.local and fill in YOUR values
# .env.local is in .gitignore and will NOT be committed to Git

# Kubeadm Join Command (generated on control plane)
# Generate with: kubeadm token create --print-join-command
# Replace with your actual join command
KUBEADM_JOIN_COMMAND="kubeadm join 192.168.56.10:6443 --token <YOUR_TOKEN> --discovery-token-ca-cert-hash sha256:<YOUR_HASH>"

# ArgoCD
# Generate random password with: openssl rand -base64 12
ARGOCD_ADMIN_PASSWORD="<generate-secure-password>"

# MongoDB
# Generate random password with: openssl rand -base64 24
MONGO_ROOT_USERNAME="root"
MONGO_ROOT_PASSWORD="<generate-secure-password>"
MONGO_INITDB_DATABASE="fk_webstack"

# API Configuration
API_CONTAINER_ID="fk-api"
API_PORT="8000"

# Frontend Configuration
FRONTEND_CONTAINER_ID="fk-frontend"
FRONTEND_PORT="80"

# Database Configuration
DB_CONTAINER_ID="fk-mongodb"
DB_PORT="27017"

# Kubernetes Namespace
K8S_NAMESPACE="fk-webstack"

# Cluster Configuration
CLUSTER_NAME="fk-kubeadm"
CONTROL_PLANE_IP="192.168.56.10"
CONTROL_PLANE_HOSTNAME="fk-control"

# TLS/HTTPS Configuration
TLS_DOMAIN="fk.local"
CERT_ISSUER_NAME="fk-self-signed-issuer"

# GitHub/Git Configuration (if using GitOps)
# GITHUB_TOKEN="<your-github-token>"
# GITHUB_REPO="your-username/your-repo"
# GITHUB_BRANCH="main"

# Logging & Monitoring
# PROMETHEUS_ADMIN_PASSWORD="<generate-secure-password>"
# GRAFANA_ADMIN_PASSWORD="<generate-secure-password>"

# Security Flags
# Set to 'true' for production
PRODUCTION_MODE="false"
ENABLE_RBAC="false"
ENABLE_NETWORK_POLICIES="false"
